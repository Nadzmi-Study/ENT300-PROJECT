import java.net.*;
import java.io.*;

import com.fazecast.jSerialComm.SerialPort;

public class Server {
	public static void main(String [] args) {	
		try {
			final ServerSocket server = new ServerSocket(9090);
			System.out.println("Server started");
			
			new Thread(new Runnable() {
				@Override
				public void run() {
					Socket client = null;
					SerialPort port;
					BufferedReader reader = null;
					
					String input = null;
					
					try {
						port = SerialPort.getCommPorts()[0];
						if(port != null) {
							System.out.println("Port initialized");
							client = server.accept();
							
							reader = new BufferedReader(new InputStreamReader(client.getInputStream()));
							input = reader.readLine();
							System.out.println("Input: "+input);
							
							BufferedReader portReader = new BufferedReader(new InputStreamReader(port.getInputStream()));
							BufferedWriter writer = new BufferedWriter(new OutputStreamWriter(port.getOutputStream()));
							if(input.equalsIgnoreCase("lock")) {
								writer.write("lock");
								writer.flush();
							} else {
								writer.write("unlock");
								writer.flush();
							}
							writer.close();
							
							reader.close();
							client.close();
						} else System.out.println("Port uninitialised");
					} catch(Exception e) {
						e.printStackTrace();
					}
				}
			}).start();
		} catch(Exception e) {
			e.printStackTrace();
		}
	}
}
